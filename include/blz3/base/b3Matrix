#ifndef B3_BASE_MATRIX_H
#define B3_BASE_MATRIX_H

#ifdef __cplusplus
extern "C"
{
#endif

#ifndef BLIZZARD_TOOLS_DATATYPE_H
#include <blizzard/tools/datatype.h>
#endif

double	 Length				(vector *);
double	 Det2				(double,double,double,double);
double	 Det3				(vector *,vector *,vector *);
double	 Det4				(matrix *);
matrix	*MatrixUnit			(matrix *);
matrix	*MatrixInv			(matrix *,matrix *);
matrix	*MatrixTrans		(matrix *,matrix *);
matrix	*MatrixMove			(matrix *,matrix *,vector *);
matrix	*MatrixMoveNeg		(matrix *,matrix *,vector *);
matrix	*MatrixScale		(matrix *,matrix *,vector *,vector *);
matrix	*MatrixRotX			(matrix *,matrix *,vector *,double);
matrix	*MatrixRotY			(matrix *,matrix *,vector *,double);
matrix	*MatrixRotZ			(matrix *,matrix *,vector *,double);
matrix	*MatrixMirrorPoint	(matrix *,matrix *,vector *,double);
matrix	*MatrixMirrorAxis	(matrix *,matrix *,line *,double);
matrix	*MatrixMirrorPlane	(matrix *,matrix *,vector *,vector *,vector *,double);
matrix	*MatrixMMul			(matrix *,matrix *,matrix *);
matrix	*MatrixSMul			(matrix *,matrix *,double);
vector	*MatrixVMul			(matrix *,vector *,vector *,bool);
matrix	*MatrixMAdd			(matrix *,matrix *,matrix *);
matrix	*MatrixRotVec		(matrix *,matrix *,struct Line *,double);

#ifdef __cplusplus
}
#endif

#endif
