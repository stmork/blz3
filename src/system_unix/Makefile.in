# Beispiel Makefile

CC				= @CC@
CXX				= @CXX@
CPPFLAGS		= @CPPFLAGS@

# Optionen

LIBS			= libB3System.o
LIB_SOURCE		=\
	b3Config.cc\
	b3Dir.cc\
	b3DisplayView.cc\
	b3File.cc\
	b3Log.cc\
	b3Plugin.cc\
	b3Thread.cc\
	b3Time.cc

LIB_OBJ			=\
	b3Config.o\
	b3Dir.o\
	b3DisplayView.o\
	b3File.o\
	b3Log.o\
	b3Plugin.o\
	b3Thread.o\
	b3Time.o

all:	$(LIBS)

depend:
	@CPP@ -M  $(LIB_SOURCE) $(CPPFLAGS) >.dep

clean:
	rm -f *.o *.il *.a *.bak *~ core $(PRGS) $(LIBS) ALL QUIET

libB3System.o:	$(LIB_OBJ)
	rm -f $@ core
	$(LD) -r -o $@ $^

-include .dep
