# Beispiel Makefile

CC			= @CC@
CXX			= @CXX@
CFLAGS			= @CFLAGS@ @MFLAGS@
CXXFLAGS		= @CXXFLAGS@ @MFLAGS@
CPPFLAGS		= @CPPFLAGS@ @MFLAGS@
LDLIBS			= @LIBS@
LIBS			= libB3Base.o
LIB_SOURCE =\
	b3Aux.cc\
	b3Clouds.cc\
	b3Color.cc\
	b3Cubic.cc\
	b3Endian.cc\
	b3FFT.cc\
	b3FileList.cc\
	b3FileMem.cc\
	b3Filter.cc\
	b3Item.cc\
	b3ItemRegister.cc\
	b3ItemRegisterEntry.cc\
	b3Math.cc\
	b3Matrix.cc\
	b3MultiSample.cc\
	b3OceanWave.cc\
	b3Pick.cc\
	b3Procedure.cc\
	b3Render.cc\
	b3RenderContext.cc\
	b3SearchPath.cc\
	b3UndoOperation.cc\
	b3VectorBufferObjects.cc\
	b3VertexBuffer.cc\
	b3Water.cc\
	b3Wood.cc\
	b3World.cc

LIB_OBJ	=\
	b3Aux.o\
	b3Clouds.o\
	b3Color.o\
	b3Cubic.o\
	b3Endian.o\
	b3FFT.o\
	b3FileList.o\
	b3FileMem.o\
	b3Filter.o\
	b3Item.o\
	b3ItemRegister.o\
	b3ItemRegisterEntry.o\
	b3Math.o\
	b3Matrix.o\
	b3MultiSample.o\
	b3OceanWave.o\
	b3Pick.o\
	b3Procedure.o\
	b3Render.o\
	b3RenderContext.o\
	b3SearchPath.o\
	b3UndoOperation.o\
	b3VectorBufferObjects.o\
	b3VertexBuffer.o\
	b3Water.o\
	b3Wood.o\
	b3World.o

all:	$(LIBS)

depend:
	@CPP@ -M $(LIB_SOURCE) $(CPPFLAGS) >.dep

clean:
	rm -f *.o *.a *.bak *~ core $(PRGS) $(LIBS) ALL QUIET

libB3Base.o:	$(LIB_OBJ)
	rm -f core
	$(LD) -r -o $@ $^

-include .dep
