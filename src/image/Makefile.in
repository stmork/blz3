# Beispiel Makefile

CC			= @CC@
CXX			= @CXX@
LD			= @LD@
CFLAGS			= @CFLAGS@
CXXFLAGS		= @CXXFLAGS@ -DB3_VERSION=\"@PACKAGE_VERSION@\"
CPPFLAGS		= @CPPFLAGS@
LDLIBS			= @LIBS@
LIBS			= libB3Image.o
LIB_SOURCE		=\
	b3Encoder.cc\
	b3EncoderBuffer.cc\
	b3EncoderStream.cc\
	b3Sampler.cc\
	b3Tx.cc\
	b3TxBlit.cc\
	b3TxEasy.cc\
	b3TxExif.cc\
	b3TxEXR.cc\
	b3TxGIF.cc\
	b3TxHist.cc\
	b3TxIFF.cc\
	b3TxIMG.cc\
	b3TxImage.cc\
	b3TxJPG.cc\
	b3TxLoadImage.cc\
	b3TxLoadTIFF.cc\
	b3TxMirror.cc\
	b3TxPCX.cc\
	b3TxPool.cc\
	b3TxSaveEXR.cc\
	b3TxSaveInfo.cc\
	b3TxSaveJPEG.cc\
	b3TxSavePS.cc\
	b3TxSaveRGB8.cc\
	b3TxSaveTGA.cc\
	b3TxSaveTIFF.cc\
	b3TxScale.cc\
	b3TxTGA.cc

LIB_OBJ			=\
	b3Encoder.o\
	b3EncoderBuffer.o\
	b3EncoderStream.o\
	b3Sampler.o\
	b3Tx.o\
	b3TxBlit.o\
	b3TxEasy.o\
	b3TxExif.o\
	b3TxEXR.o\
	b3TxGIF.o\
	b3TxHist.o\
	b3TxIFF.o\
	b3TxIMG.o\
	b3TxImage.o\
	b3TxJPG.o\
	b3TxLoadImage.o\
	b3TxLoadTIFF.o\
	b3TxMirror.o\
	b3TxPCX.o\
	b3TxPool.o\
	b3TxSaveEXR.o\
	b3TxSaveInfo.o\
	b3TxSaveJPEG.o\
	b3TxSavePS.o\
	b3TxSaveRGB8.o\
	b3TxSaveTGA.o\
	b3TxSaveTIFF.o\
	b3TxScale.o\
	b3TxTGA.o

all:	$(LIBS)

depend:
	@CPP@ -M @STDFLAGS@ $(LIB_SOURCE) $(CPPFLAGS) >.dep

clean:
	rm -f *.o *.a *.bak *~ core $(PRGS) $(LIBS) ALL QUIET

libB3Image.o:	$(LIB_OBJ)
	rm -f core
	$(LD) -r -o $@ $^

-include .dep
