# Beispiel Makefile

BLZ3_LIB		= @BLZ3_LIB@
BLZ3_BIN		= @BLZ3_BIN@
CC			= @CC@
CXX			= @CXX@
CFLAGS			= @CFLAGS@
CXXFLAGS		= @CXXFLAGS@
CPPFLAGS		= @CPPFLAGS@
LDFLAGS			= @LDFLAGS@
LDLIBS			= @LIBS@ -lx264
DIVXLIBS		= @DIVXLIBS@
X264LIBS		= @X264LIBS@
prefix			= @prefix@
exec_prefix		= @exec_prefix@

LINK.o			= $(LINK.cc)

PRG_SOURCE		= divx.cc avilib.c libxio.c h264.cc

DIVX_OBJS		= divx.o avilib.o libxio.o
H264_OBJS		= h264.o

B3_LIB_SYSTEM	= $(BLZ3_LIB)/libB3System.a
B3_LIB_BASE		= $(BLZ3_LIB)/libB3Base.a
B3_LIB_RAYTRACE	= $(BLZ3_LIB)/libB3Raytrace.a

PRGS			= divx h264
INSTALL_PRGS	= divx h264

all:	$(PRGS)

install:	$(INSTALL_PRGS)
	cp $^ @bindir@
	(cd @bindir@; chmod 755 $^;)

depend:
	@CPP@ -M  $(PRG_SOURCE) $(CPPFLAGS) >.dep

clean:
	rm -f *.o *.bak *~ core $(PRGS) ALL QUIET
	(cd $(BLZ3_BIN); rm -f $(PRGS); )

divx:	$(DIVX_OBJS) $(B3_LIB_BASE)

h264:	$(H264_OBJS) $(B3_LIB_BASE)

-include .dep
