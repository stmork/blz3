TEST_FILES = Config.tst *.jpg test1.bwd test2.bwd

all:	$(PRGS)

depend:
	@CPP@ -M @STDFLAGS@ $(BASETEST_SOURCE) $(CPPFLAGS) >.dep

clean:	cleantest
	rm -f *.o *.bak *~ core img_test* test*.bwd $(PRGS) out ALL QUIET

cleantest:
	rm -f $(TEST_FILES)

basetest:	$(BASETEST_OBJS) $(B3_LIB_BASE) $(B3_LIB_RAYTRACE)

test:	basetest
	time ./basetest

-include .dep
